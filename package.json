{
  "name": "agent",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev:backend": "npm --prefix backend run dev",
    "build": "npm-run-all build:frontend build:backend",
    "build:frontend": "npm --prefix frontend run build",
    "build:backend": "npm --prefix backend run start",
    "test": "npm-run-all test:frontend test:backend",
    "test:frontend": "npm --prefix frontend test",
    "test:backend": "npm --prefix backend test",
    "lint": "npm-run-all lint:frontend lint:backend",
    "lint:frontend": "npm --prefix frontend run lint",
    "lint:backend": "npm --prefix backend run lint",
    "db:pull": "prisma db pull --schema backend/prisma/schema.prisma --env-file .env",
    "db:push": "prisma db push --schema backend/prisma/schema.prisma --env-file .env",
    "db:generate": "prisma generate --schema backend/prisma/schema.prisma --env-file .env",
    "db:studio": "prisma studio --schema backend/prisma/schema.prisma --env-file .env"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "prettier": "^3.6.2"
  }
}
